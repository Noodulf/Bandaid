{
    "manifest_version": 3,
    "name": "Bandaid",
    "version": "1.0",
    "description": "Control mouse events on a webpage.",
    "permissions": [
      "activeTab", 
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  